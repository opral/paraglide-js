{
	"personal_balance": [
		{
			"declarations": [
				"input amount",
				"local formattedAmount = amount: number"
			],
			"match": {
				"amount=*": "Ihr Kontostand ist {formattedAmount}."
			}
		}
	],
	"personal_balance_fixed_decimals": [
		{
			"declarations": [
				"input amount",
				"local formattedAmount = amount: number minimumFractionDigits=2 maximumFractionDigits=2"
			],
			"match": {
				"amount=*": "Kontostand: {formattedAmount}."
			}
		}
	],
	"purchase_date": [
		{
			"declarations": [
				"input date",
				"local formattedDate = date: datetime day=2-digit month=2-digit year=numeric timeZone=UTC"
			],
			"match": {
				"date=*": "Kaufdatum: {formattedDate}."
			}
		}
	]
}
